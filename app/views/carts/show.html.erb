
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<!-- START_HIGHLIGHT -->
<h2>Your Cart</h2>
<table>
<!-- END_HIGHLIGHT -->
  <% @cart.line_items.each do |item| %>
<!-- START_HIGHLIGHT -->
    <tr>
      <td><%= item.quantity %>&times;</td>
      <td><%= item.product.title %></td>
      <td class="item_price"><%= number_to_currency(item.total_price) %></td>
      <td class="delete_product_button"><%= button_to 'Remove Product', item, method: :delete,
          confirm:"Are you sure you want to remove #{item.product.title} from your cart?" %> </td>
    </tr>
<!-- END_HIGHLIGHT -->
  <% end %>
<!-- START_HIGHLIGHT -->
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
  </tr>
<!-- END_HIGHLIGHT -->
<!-- START_HIGHLIGHT -->
</table>
<!-- END_HIGHLIGHT -->

<table>
  <tr>
    <td class="continue_shopping_button"><%= button_to 'Continue Shopping', store_path %> </td>
    <td class="empty_cart_button"><%= button_to 'Empty cart', @cart, method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
  </tr>
</table>